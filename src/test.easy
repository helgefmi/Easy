def countdown(n) do
    printf("%d..\n" n)
    if (n > 1) then
        countdown(n - 1)
    end
end

def nfac(n) do
    if n <= 1 then
        return 1
    else
        return n * nfac(n - 1)
    end
end

def nfac_tail(n k) do
    if n <= 1 then
        return k
    else
        return nfac_tail((n - 1) (k * n))
    end
end

def fib(n) do
    if n <= 0 then return 0 end
    if n == 1 then return 1 end
    return fib(n - 1) + fib(n - 2)
end


def test_if do
    if atoi("0") then
        puts("ERROR. 0")
    else
        puts("OK. 0")
    end

    if atoi("1") then
        puts("OK. 1")
    else
        puts("ERROR. 1")
    end

    if (atoi("5") * 5) < 25 then
        puts("ERROR. 5 * 5 < 25")
    else
        puts("OK. 5 * 5 < 25")
    end
end

def test_compare do
    if atoi("1") < 2 then
        puts("OK. 1 < 2")
    else
        puts("ERROR. 1 < 2")
    end

    if atoi("1") > 2 then
        puts("ERROR. 1 > 2")
    else
        puts("OK. 1 > 2")
    end

    if atoi("2") > 2 then
        puts("ERROR. 2 > 2")
    else
        puts("OK. 2 > 2")
    end

    if atoi("2") >= 2 then
        puts("OK. 2 >= 2")
    else
        puts("ERROR. 2 >= 2")
    end

    if atoi("55") == 55 then
        puts("OK. 55 == 55")
    else
        puts("ERROR. 55 == 55")
    end

    if atoi("66") != 66 then
        puts("ERROR. 66 != 66")
    else
        puts("OK. 66 != 66")
    end
end

